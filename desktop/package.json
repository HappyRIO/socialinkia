{
  "name": "desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://github.com/mernking/my-electron-app",
  "main": "electron/main.js",
  "scripts": {
    "vite-dev": "vite",
    "build": "vite build",
    "watch": "vite build --watch",
    "dev": "concurrently \"vite\" \"npm:electron-dev\"",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "start": "electron .",
    "electron-pack": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyElectronApp",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Your Name <you@example.com>",
      "synopsis": "Short description of your app",
      "description": "A longer description of your Electron app for Linux users.",
      "icon": "public/vit.svg"
    }
  },
  "dependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.29.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@toast-ui/react-image-editor": "^3.15.2",
    "axios": "^1.7.7",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.454.0",
    "planby": "^1.1.7",
    "react": "^18.3.1",
    "react-calendar": "^5.1.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "tailwind-scrollbar-hide": "^2.0.0",
    "translate": "^3.0.1",
    "tui-image-editor": "^3.15.3",
    "use-image": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.10",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8"
  }
}
